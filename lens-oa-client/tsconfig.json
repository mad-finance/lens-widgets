{
  "compilerOptions": {
    "module": "esnext",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "declaration": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"]
}